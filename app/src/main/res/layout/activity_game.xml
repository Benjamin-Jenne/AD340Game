<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".GameActivity">

<!--    Indeterminate for no known end time-->
<!--    <ProgressBar-->
<!--        android:id="@+id/indeterminateHealthBar"-->
<!--        style="@android:style/Widget.ProgressBar.Horizontal"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        />-->

<!--    Determinate bar with set progress. -->

    <TextView
        android:id="@+id/textViewHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="@string/health" />

    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHealth"
        android:progress="75"/>

    <TextView
        android:id="@+id/textViewAttachedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHealth"
        android:layout_toEndOf="@id/determinateBar"
        android:layout_marginStart="20dp"
        android:textColor="@color/red"
        android:text="" />

    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/left"
        android:textSize="45dp"
        android:layout_above="@id/buttonDown" />

    <Button
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/right"
        android:textSize="45dp"
        android:layout_toEndOf="@id/buttonDown"
        android:layout_above="@id/buttonDown"/>

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/down"
        android:layout_alignParentBottom="true"
        android:textSize="45dp"
        android:layout_toEndOf="@id/buttonLeft"/>

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/up"
        android:textSize="45dp"
        android:layout_toEndOf="@id/buttonLeft"
        android:layout_above="@id/buttonLeft"
/>
    <Button
        android:id="@+id/buttonAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="@string/attack"
        android:textSize="45dp"
        android:layout_above="@id/buttonDown"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
</FrameLayout>